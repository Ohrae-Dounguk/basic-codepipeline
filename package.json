{
  "name": "zeroeyes_data_server",
  "version": "1.0.0",
  "description": "스터디카페 데이터 서버",
  "main": "index.js",
  "repository": "https://github.com/zcenter/Data_Server.git",
  "author": "zcenter <ohrae@ohrae.biz>",
  "license": "MIT",
  "scripts": {
    "ts-node": "ts-node --transpile-only",
    "typeorm": "yarn ts-node ./node_modules/typeorm/cli.js",
    "build": "rm -rf dist/ && tsc",
    "start": "nodemon ./src/server.ts",
    "lint": "eslint src/* --fix",
    "deploy": "pm2 deploy",
    "serve": "pm2 startOrRestart ecosystem.config.js",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "test": "jest --coverage --verbose",
    "test:clear": "jest --clearCache",
    "barrels": "barrelsby -D -c 'config/barrelsby/entity.json' && barrelsby -D -c 'config/barrelsby/repository.json' && barrelsby -D -c 'config/barrelsby/service.json' && barrelsby -D -c 'config/barrelsby/interface.json' && barrelsby -D -c 'config/barrelsby/interface_enum.json'"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.10",
    "@types/shortid": "^0.0.29",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "barrelsby": "^2.2.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "class-validator-jsonschema": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "npm-check-updates": "^11.8.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6",
    "shortid": "^2.2.16",
    "ts-loader": "^8.0.11",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.29",
    "typeorm-typedi-extensions": "^0.2.3",
    "winston": "^3.3.3",
    "winston-cloudwatch": "^2.5.2",
    "winston-daily-rotate-file": "^4.5.0"
  }
}
